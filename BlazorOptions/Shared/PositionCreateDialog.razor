@using MudBlazor
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using System.Linq
@using BlazorOptions.ViewModels
@inject ActivePositionsPanelViewModel PositionsViewModel
@implements IDisposable

<MudDialog Class="position-name-dialog">
    <DialogContent>
        <MudTextField @bind-Value="_name"
                      Label="Position name"
                      Placeholder="Enter a name"
                      Immediate="true"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined"
                      FullWidth="true"
                      OnKeyDown="HandleKeyDown" />
        <ActivePositionsPanel ViewModel="PositionsViewModel" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled="!CanSave" OnClick="Save">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance Dialog { get; set; } = default!;

    [Parameter] public string? InitialName { get; set; }

    [Parameter] public string? InitialBaseAsset { get; set; }

    [Parameter] public string? InitialQuoteAsset { get; set; }

    private string _name = string.Empty;

    private bool CanSave => !string.IsNullOrWhiteSpace(_name)
                            && !string.IsNullOrWhiteSpace(PositionsViewModel.BaseAsset)
                            && !string.IsNullOrWhiteSpace(PositionsViewModel.QuoteAsset);

    protected override async Task OnInitializedAsync()
    {
        _name = string.IsNullOrWhiteSpace(InitialName) ? "Position" : InitialName;
        await PositionsViewModel.InitializeAsync(InitialBaseAsset, InitialQuoteAsset, null);
    }

    protected override void OnInitialized()
    {
        PositionsViewModel.OnChange += HandleStateChanged;
    }

    private void HandleStateChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }

    private void Save()
    {
        var name = _name.Trim();
        var baseAsset = PositionsViewModel.BaseAsset.Trim().ToUpperInvariant();
        var quoteAsset = PositionsViewModel.QuoteAsset.Trim().ToUpperInvariant();
        Dialog.Close(DialogResult.Ok(new PositionCreateRequest(
            name,
            baseAsset,
            quoteAsset,
            PositionsViewModel.SelectedPositions.ToList())));
    }

    private void Cancel()
    {
        Dialog.Cancel();
    }

    private void HandleKeyDown(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" && CanSave)
        {
            Save();
        }
        else if (args.Key == "Escape")
        {
            Cancel();
        }
    }

    public void Dispose()
    {
        PositionsViewModel.OnChange -= HandleStateChanged;
        PositionsViewModel.Dispose();
    }
}
