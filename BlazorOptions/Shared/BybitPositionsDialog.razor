@using MudBlazor
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using System.Linq
@using BlazorOptions.ViewModels
@inject ActivePositionsPanelViewModel PositionsViewModel
@implements IDisposable

<MudDialog Class="position-name-dialog">
    <DialogContent>
        <ActivePositionsPanel ViewModel="PositionsViewModel" ShowAssetInputs="false" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled="@(PositionsViewModel.SelectedPositions.Count == 0)" OnClick="Save">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance Dialog { get; set; } = default!;

    [Parameter] public string? InitialBaseAsset { get; set; }

    [Parameter] public string? InitialQuoteAsset { get; set; }

    [Parameter] public IReadOnlyList<LegModel>? ExistingLegs { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await PositionsViewModel.InitializeAsync(InitialBaseAsset, InitialQuoteAsset, ExistingLegs);
    }

    protected override void OnInitialized()
    {
        PositionsViewModel.OnChange += HandleStateChanged;
    }

    private void HandleStateChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }

    private void Save()
    {
        Dialog.Close(DialogResult.Ok(PositionsViewModel.SelectedPositions.ToList()));
    }

    private void Cancel()
    {
        Dialog.Cancel();
    }

    public void Dispose()
    {
        PositionsViewModel.OnChange -= HandleStateChanged;
        PositionsViewModel.Dispose();
    }
}
