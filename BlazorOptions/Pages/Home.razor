@page "/"
@implements IDisposable
@inject HomeDashboardViewModel ViewModel
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<PageTitle>Home</PageTitle>

<MudStack Spacing="2">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
        <MudText Typo="Typo.h4">Dashboard</MudText>
        <MudStack Row="true" Spacing="1">
            <MudIconButton Icon="@Icons.Material.Filled.AddCircle"
                           Color="Color.Primary"
                           OnClick="CreatePositionAsync"
                           aria-label="Open positions" />
            <MudIconButton Icon="@(ViewModel.IsLoading ? Icons.Material.Filled.HourglassTop : Icons.Material.Filled.Refresh)"
                           Color="Color.Primary"
                           Disabled="ViewModel.IsLoading"
                           OnClick="ReloadAsync"
                           aria-label="Refresh dashboard" />
        </MudStack>
    </MudStack>

    @if (!string.IsNullOrWhiteSpace(ViewModel.ErrorMessage))
    {
        <MudAlert Severity="Severity.Warning">@ViewModel.ErrorMessage</MudAlert>
    }

    @if (ViewModel.Positions.Count == 0)
    {
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.body1">No positions yet.</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="positions" StartIcon="@Icons.Material.Filled.ShowChart">
                Open position builder
            </MudButton>
        </MudPaper>
    }
    else
    {
        @foreach (var positionGroup in ViewModel.Groups)
        {
            <MudStack Spacing="1">
                <MudText Typo="Typo.h6">@positionGroup.AssetPair</MudText>
                <MudGrid Spacing="2">
                    @foreach (var position in positionGroup.Positions)
                    {
                        <MudItem xs="12" md="6" lg="4" @key="position.Id">
                            <MudPaper Class="pa-3 home-position-card home-position-card-clickable"
                                      @onclick="() => OpenPosition(position.Id)">
                                <MudStack Spacing="1">
                                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Start">
                                        <MudText Typo="Typo.h6">@position.Name</MudText>
                                        <MudStack Row="true" Spacing="1" Class="home-position-pnl">
                                            <MudChip T="string" Size="Size.Small" Color="@ResolvePnlColor(position.TotalPnl)">
                                                P/L: @position.TotalPnl.ToString("0.##")
                                            </MudChip>
                                            <MudChip T="string" Size="Size.Small" Variant="Variant.Outlined">
                                                @if (position.PnlPercent.HasValue)
                                                {
                                                    @($"{position.PnlPercent.Value:+0.##;-0.##;0}%")
                                                }
                                                else
                                                {
                                                    @("n/a")
                                                }
                                            </MudChip>
                                        </MudStack>
                                    </MudStack>

                                    <MudGrid Spacing="1">
                                        <MudItem xs="12" md="6">
                                            <div class="home-mini-chart">
                                                <MudChart ChartType="ChartType.Line"
                                                          Width="100%"
                                                          Height="180px"
                                                          XAxisLabels="@position.Chart.XLabels.ToArray()"
                                                          ChartOptions="@_miniChartOptions"
                                                          ChartSeries="@BuildSeries(position.Chart)" />
                                                @if (position.CurrentPricePercent.HasValue)
                                                {
                                                    <div class="home-current-price-line" style="@BuildCurrentPriceLineStyle(position.CurrentPricePercent.Value)"></div>
                                                }
                                            </div>
                                        </MudItem>
                                        <MudItem xs="12" md="6">
                                            <MudStack Spacing="1">
                                                @foreach (var group in GroupLegsByExpiration(position.QuickAddLegs))
                                                {
                                                    <MudText Typo="Typo.caption" Class="home-legs-group-title">@group.Key</MudText>
                                                    <MudStack Row="true" Wrap="Wrap.Wrap" Spacing="1">
                                                        @foreach (var leg in group.Value)
                                                        {
                                                            <MudTooltip Arrow="true" Placement="Placement.Top">
                                                                <ChildContent>
                                                                    <MudChip T="string"
                                                                             Size="Size.Small"
                                                                             Variant="Variant.Outlined"
                                                                             Class="@($"home-leg-chip {leg.SeverityClass}")"
                                                                             @onclick:stopPropagation="true">
                                                                        @leg.Text
                                                                    </MudChip>
                                                                </ChildContent>
                                                                <TooltipContent>
                                                                    <table class="home-leg-tooltip-table">
                                                                        <tbody>
                                                                            <tr><td>Type</td><td>@leg.Type</td></tr>
                                                                            <tr><td>Size</td><td>@leg.Size.ToString("0.####")</td></tr>
                                                                            <tr><td>Entry</td><td>@FormatNullable(leg.EntryPrice)</td></tr>
                                                                            <tr><td>Mark</td><td>@FormatNullable(leg.MarkPrice)</td></tr>
                                                                            <tr><td>Entry value</td><td>@leg.EntryValue.ToString("0.##")</td></tr>
                                                                            <tr><td>Current value</td><td>@leg.CurrentValue.ToString("0.##")</td></tr>
                                                                            <tr><td>PnL</td><td>@leg.Pnl.ToString("0.##")</td></tr>
                                                                            <tr><td>PnL %</td><td>@FormatPercent(leg.PnlPercent)</td></tr>
                                                                            @if (!string.IsNullOrWhiteSpace(leg.Symbol))
                                                                            {
                                                                                <tr><td>Symbol</td><td>@leg.Symbol</td></tr>
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </TooltipContent>
                                                            </MudTooltip>
                                                        }
                                                    </MudStack>
                                                }
                                            </MudStack>
                                        </MudItem>
                                    </MudGrid>

                                    @if (!string.IsNullOrWhiteSpace(position.Notes))
                                    {
                                        <MudText Typo="Typo.caption" Style="white-space: pre-line;">@position.Notes</MudText>
                                    }
                                </MudStack>
                                <div class="home-card-delete" @onclick:stopPropagation="true">
                                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                                   Color="Color.Error"
                                                   Size="Size.Small"
                                                   OnClick="async () => await ConfirmAndRemovePositionAsync(position.Id, position.Name)" />
                                </div>
                            </MudPaper>
                        </MudItem>
                    }
                </MudGrid>
            </MudStack>
        }
    }
</MudStack>

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.PropertyChanged += HandleViewModelChanged;
        await ViewModel.LoadAsync();
    }

    public void Dispose()
    {
        ViewModel.PropertyChanged -= HandleViewModelChanged;
    }

    private Task ReloadAsync()
    {
        return ViewModel.LoadAsync();
    }

    private async Task CreatePositionAsync()
    {
        var createdPositionId = await ViewModel.CreatePositionAsync();
        if (!createdPositionId.HasValue || createdPositionId.Value == Guid.Empty)
        {
            return;
        }

        OpenPosition(createdPositionId.Value);
    }

    private async Task ConfirmAndRemovePositionAsync(Guid positionId, string? positionName)
    {
        var label = string.IsNullOrWhiteSpace(positionName) ? "this position" : positionName;
        var confirmed = await DialogService.ShowMessageBox(
            "Remove position?",
            $"Delete {label} from dashboard and positions?",
            yesText: "Delete",
            cancelText: "Cancel");

        if (confirmed != true)
        {
            return;
        }

        await ViewModel.RemovePositionAsync(positionId);
    }

    private void OpenPosition(Guid positionId)
    {
        NavigationManager.NavigateTo($"/positions/{positionId}");
    }

    private void HandleViewModelChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        _ = InvokeAsync(StateHasChanged);
    }

    private static List<ChartSeries> BuildSeries(HomeMiniChartModel chart)
    {
        var zero = new double[chart.Values.Count];
        return
        [
            new ChartSeries
            {
                Name = "P/L",
                Data = chart.Values.ToArray()
            },
            new ChartSeries
            {
                Name = "Temp",
                Data = chart.TempValues.ToArray()
            },
            new ChartSeries
            {
                Name = "Zero",
                Data = zero
            }
        ];
    }

    private static Color ResolvePnlColor(decimal value)
    {
        if (value > 0)
        {
            return Color.Success;
        }

        if (value < 0)
        {
            return Color.Error;
        }

        return Color.Default;
    }

    private static string BuildCurrentPriceLineStyle(double percent)
    {
        var clamped = Math.Clamp(percent, 0d, 100d);
        return $"left:{clamped.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)}%;";
    }

    private static IReadOnlyList<KeyValuePair<string, IReadOnlyList<HomeLegChipModel>>> GroupLegsByExpiration(IReadOnlyList<HomeLegChipModel> legs)
    {
        return legs
            .GroupBy(leg => leg.ExpirationDate?.ToString("yyyy-MM-dd") ?? "Perpetual")
            .OrderBy(group => group.Key == "Perpetual" ? "9999-12-31" : group.Key, StringComparer.Ordinal)
            .Select(group => new KeyValuePair<string, IReadOnlyList<HomeLegChipModel>>(group.Key, group.ToArray()))
            .ToArray();
    }

    private static string FormatNullable(decimal? value)
    {
        return value.HasValue ? value.Value.ToString("0.####") : "n/a";
    }

    private static string FormatPercent(decimal? value)
    {
        return value.HasValue ? $"{value.Value:+0.##;-0.##;0}%" : "n/a";
    }

    private readonly ChartOptions _miniChartOptions = new()
    {
        ChartPalette = ["#3b82f6", "#22d3ee", "#f8fafc"],
        ShowLegend = false,
        ShowToolTips = true,
        LineStrokeWidth = 2.5,
        XAxisLabelPosition = XAxisLabelPosition.Bottom,
        YAxisLabelPosition = YAxisLabelPosition.Left
    };
}

<style>
    .home-mini-chart {
        position: relative;
    }

    .home-current-price-line {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 1px;
        background: rgba(255, 255, 255, 0.95);
        z-index: 3;
        pointer-events: none;
    }

    .home-legs-group-title {
        opacity: 0.8;
    }

    .home-position-card-clickable {
        cursor: pointer;
        position: relative;
        padding-bottom: 36px;
    }

    .home-card-delete {
        position: absolute;
        right: 6px;
        bottom: 6px;
    }

    .home-position-pnl {
        justify-content: flex-end;
    }

    .home-leg-chip.home-leg-profit {
        border-color: #22c55e;
        color: #22c55e;
    }

    .home-leg-chip.home-leg-low {
        border-color: #facc15;
        color: #facc15;
    }

    .home-leg-chip.home-leg-medium {
        border-color: #f59e0b;
        color: #f59e0b;
    }

    .home-leg-chip.home-leg-high {
        border-color: #f97316;
        color: #f97316;
    }

    .home-leg-chip.home-leg-critical {
        border-color: #ef4444;
        color: #ef4444;
    }

    .home-leg-tooltip-table {
        border-collapse: collapse;
        font-size: 11px;
    }

    .home-leg-tooltip-table td {
        padding: 2px 8px;
        border: none;
        white-space: nowrap;
    }

    .home-leg-tooltip-table td:first-child {
        opacity: 0.8;
    }
</style>
