@page "/long-call"
@using LiveChartsCore
@using LiveChartsCore.SkiaSharpView
@using LiveChartsCore.SkiaSharpView.Blazor
@using LiveChartsCore.SkiaSharpView.Painting
@inject PositionBuilderViewModel ViewModel

<PageTitle>Multi-leg ETH/USDT Position</PageTitle>

<MudStack Spacing="3">
    <MudCard>
        <MudCardContent>
            <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.h4">@ViewModel.Pair Position</MudText>
                    <MudText Typo="Typo.subtitle2">Construct calls, puts, and futures legs for the pair.</MudText>
                </MudStack>
                <MudTextField @bind-Value="ViewModel.Pair"
                               Label="Pair"
                               Variant="Variant.Outlined"
                               Margin="Margin.Dense"
                               Adornment="Adornment.Start"
                               AdornmentIcon="@Icons.Material.Filled.Link" />
            </MudStack>
        </MudCardContent>
        <MudCardContent>
            <MudPaper Class="pa-4" Elevation="0" Style="height:320px; position:relative; overflow:hidden;">
                <CartesianChart Series="@ViewModel.Series"
                                XAxes="@ViewModel.XAxes"
                                YAxes="@ViewModel.YAxes"
                                Style="height:100%; width:100%;" />
            </MudPaper>
        </MudCardContent>
    </MudCard>

    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h6">Legs</MudText>
            <MudSpacer />
            <MudTooltip Text="Add leg">
                <MudIconButton Icon="@Icons.Material.Filled.AddCircle" Color="Color.Primary" OnClick="OnAddLeg" />
            </MudTooltip>
        </MudCardHeader>
        <MudCardContent>
            <MudTable Items="@ViewModel.Legs" Dense="true" Hover="true" Class="leg-table">
                <HeaderContent>
                    <MudTh>Include</MudTh>
                    <MudTh>Type</MudTh>
                    <MudTh>Strike</MudTh>
                    <MudTh>Expiration</MudTh>
                    <MudTh>Size</MudTh>
                    <MudTh>Price</MudTh>
                    <MudTh>IV</MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Include">
                        <MudCheckBox T="bool"
                                     Value="@context.IsIncluded"
                                     ValueChanged="checkedValue => OnLegIncludedChanged(context, checkedValue)" />
                    </MudTd>
                    <MudTd DataLabel="Type">
                        <MudSelect T="OptionLegType" Value="@context.Type" ValueChanged="type => OnLegTypeChanged(context, type)" Dense="true">
                            @foreach (var type in LegTypes)
                            {
                                <MudSelectItem Value="@type">@type</MudSelectItem>
                            }
                        </MudSelect>
                    </MudTd>
                    <MudTd DataLabel="Strike">
                        <MudNumericField T="double" Value="@context.Strike" ValueChanged="value => OnLegStrikeChanged(context, value)" Variant="Variant.Outlined" Margin="Margin.Dense" Adornment="Adornment.End" AdornmentText="USDT" />
                    </MudTd>
                    <MudTd DataLabel="Expiration">
                        <MudDatePicker Date="context.ExpirationDate"
                                       DateChanged="date => OnExpirationChanged(context, date)"
                                       DateFormat="yyyy-MM-dd"
                                       Class="full-width" />
                    </MudTd>
                    <MudTd DataLabel="Size">
                        <MudNumericField T="double" Value="@context.Size" ValueChanged="value => OnLegSizeChanged(context, value)" Variant="Variant.Outlined" Margin="Margin.Dense" />
                    </MudTd>
                    <MudTd DataLabel="Price">
                        <MudNumericField T="double" Value="@context.Price" ValueChanged="value => OnLegPriceChanged(context, value)" Variant="Variant.Outlined" Margin="Margin.Dense" Adornment="Adornment.End" AdornmentText="USDT" />
                    </MudTd>
                    <MudTd DataLabel="IV">
                        <MudNumericField T="double" Value="@context.ImpliedVolatility" ValueChanged="value => OnLegIvChanged(context, value)" Variant="Variant.Outlined" Margin="Margin.Dense" Adornment="Adornment.End" AdornmentText="%" />
                    </MudTd>
                    <MudTd DataLabel="Actions" Style="text-align:right;">
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="() => OnRemoveLeg(context)" />
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudCardContent>
    </MudCard>
</MudStack>

@code {
    private IEnumerable<OptionLegType> LegTypes => Enum.GetValues<OptionLegType>();

    protected override void OnInitialized()
    {
        ViewModel.InitializeDefaultPosition();
    }

    private void OnAddLeg()
    {
        ViewModel.AddLeg();
        ViewModel.UpdateChart();
    }

    private void OnRemoveLeg(OptionLegModel leg)
    {
        ViewModel.RemoveLeg(leg);
        ViewModel.UpdateChart();
    }

    private void OnLegIncludedChanged(OptionLegModel leg, bool include)
    {
        leg.IsIncluded = include;
        ViewModel.UpdateChart();
    }

    private void OnLegTypeChanged(OptionLegModel leg, OptionLegType type)
    {
        leg.Type = type;
        ViewModel.UpdateChart();
    }

    private void OnLegStrikeChanged(OptionLegModel leg, double strike)
    {
        leg.Strike = strike;
        ViewModel.UpdateChart();
    }

    private void OnExpirationChanged(OptionLegModel leg, DateTime? date)
    {
        if (date.HasValue)
        {
            leg.ExpirationDate = date.Value;
        }

        ViewModel.UpdateChart();
    }

    private void OnLegSizeChanged(OptionLegModel leg, double size)
    {
        leg.Size = size;
        ViewModel.UpdateChart();
    }

    private void OnLegPriceChanged(OptionLegModel leg, double price)
    {
        leg.Price = price;
        ViewModel.UpdateChart();
    }

    private void OnLegIvChanged(OptionLegModel leg, double iv)
    {
        leg.ImpliedVolatility = iv;
        ViewModel.UpdateChart();
    }
}
